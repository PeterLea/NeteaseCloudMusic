/* pages/recommendDaily/recommendDaily.wxss */
page{
  height: 100%;
}
songList{
  position: relative;
}
.toptitle{
  display: flex;
  width: 100%;
  position: absolute;
  align-items: center;
  height: 88rpx;
  top:40rpx;
  left:0;
  z-index: 3;
}
.iconfont{
  color: #fff;
  font-size: 44rpx;
  margin-left: 34rpx;
  line-height: 1;
}
.icon-fanhui1{
  flex:1;
}
.icon-wenti{
  font-size: 60rpx;
  flex:0;
}
.icon-music{
  margin-right: 27rpx;
  margin-left: 27rpx;
}
.icon-music text{
  width: 4rpx;
  background: #fff;
  margin-left:10rpx;
  display: inline-block;
}
.icon-music text:nth-child(1){
  height: 24rpx;
}
.icon-music text:nth-child(2){
  height: 44rpx;
}
.icon-music text:nth-child(3){
  height: 28rpx;
}
.icon-music text:nth-child(4){
  height: 36rpx;
}
.tips{
  height: 250rpx;
  padding-top:44rpx;
  box-sizing: border-box;
}
.day{
  color: #fff;
  font-size: 66rpx;
  line-height: 112rpx;
  margin-left: 54rpx;
}
.line{
  color: #fff;
  font-size: 32rpx;
  margin: 0 10rpx;
}
.mounth{
  color: #fff;
  font-size: 30rpx;
}
.histoty_recom{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 218rpx;
  height: 56rpx;
  background-color:rgba(255, 255, 255, 0.8) ;
  border-radius: 28rpx;
  margin-left: 32rpx;
  font-size: 26rpx;
  color: #333;
}
.histoty_recom>image{
  width: 54rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.playmenu,.chooseAll{
  width: 100%;
  display: flex;
  height: 100rpx;
  background: #fff;
  border-radius: 38rpx 38rpx 0 0;
  color: #000;
  align-items: center;
}
.playmenu>text{
  line-height: 1;
}
.icon-bofang{
  color: #333434;
  font-size: 40rpx;
  margin-left: 22rpx;
  margin-right: 20rpx;
}
.playall{
  font-weight: 549;
  font-size: 32rpx;
  flex:1;
}
.icon-gengduo1{
  color: #000;
  font-size: 26rpx;
}
.choosemore{
  font-size: 26rpx;
  margin-left: 8rpx;
  margin-right: 35rpx;
}
checkbox{
  width: 44rpx;
  height: 44rpx;
  margin:0 20rpx;
}
checkbox .wx-checkbox-input {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}
.checkall{
  flex:1;
}
.finish{
  margin-right: 47rpx;
  color: #ff3a3a;
}
