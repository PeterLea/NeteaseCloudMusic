.header{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
}
.header-text{
    color: #ef3d4d;
}
.btn-back,.btn-rank{
  width: 88rpx;
  height: 88rpx;
}
.btn-back{
  margin-left: 30rpx;
}
.btn-rank{
  margin-right: 27rpx;
}
.header-text-box{
  border: 2rpx solid #eacfd6;
  margin:15rpx 0;
  border-radius: 25rpx;
}
.header-text{
  line-height: 56rpx;
  background: #fff;
  color: #f64851;
  border-radius: 25rpx;
  width: 138rpx;
  display: block;
  float: left;
}
.header-text-active{
  background: #ef3d4d;
  color: #fff;
  line-height: 56rpx;
  border-radius: 25rpx;
  width: 138rpx;
  display: block;
  float: left;
}