.header{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  color: #333334;
  font-weight: 600;
}
.btn-back,.btn-rank{
  width: 44rpx;
  height: 44rpx;
  
}
.btn-back{
  margin-left: 30rpx;
  background-color: red;
}
.btn-rank{
  margin-right: 27rpx;
}

.rank-body{
  display: block;
  padding: 18rpx 0 0 32rpx;
}
.title{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #333334;
  font-weight: 600;
}
.box-item{
  margin-bottom: 20rpx;
  display: flex;
}
.item-img{
  width: 216rpx;
  height: 216rpx;
  border-radius: 6rpx;
}
.item-song{
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: column;

}
.song-body{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 56rpx;
  width: 440rpx;
  line-height: 56rpx; 
  color: #666667;
  font-size: 26rpx;
}

.global-box{
  width: 688rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.global-box-item{
  width: 216rpx;
  margin-bottom: 29rpx;
}
.view-img{
  width: 216rpx;
  height: 216rpx;
  border-radius: 6rpx;
  margin-bottom:13rpx; 
  position: relative;
}
.global-item-title{
  display: block;
  max-width: 216rpx;
  line-height: 31rpx;
  font-size: 25rpx;
  padding: 0 7rpx;
  color: #424243; 
  word-break: normal;
}
.update-time{
  position: absolute;
  bottom: 16rpx;
  left: 12rpx;
  font-size: 24rpx;
  color: white;
}