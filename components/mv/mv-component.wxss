/* components/mv/mv-component.wxss */
.mv-item{
  display: flex;
  flex-direction: column;
  padding: 0 25rpx;
  position: relative;
}
.mv-img{
  border-radius: 10rpx;
  height: 390rpx;
  width: 100%;
}
.mv-last{
  display: inline-block;
  padding: 10rpx 0 0 0;
  margin-bottom: 30rpx;
  background: #f8f8f8;
  border-radius: 5rpx;
  color: #000;
  font-size: 32rpx;
}
.img-box{
  position: absolute;
  top: 0;
  right: 20rpx;
  font-size: 26rpx;
  color: white;
}
