/* components/search/search-component.wxss */
.search{
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.title{
  font-size: 30rpx;
}
.search-main{
  margin-top: 30rpx;
}
.search-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.search-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.rank-right{
  display: flex;
  flex-direction: column;
}
.rank{
  font-size: 32rpx;
  color: #999;
  margin-right: 30rpx;
}
.rank-top{
  display: flex;
  flex-direction: row;
}
.hot{
  width: 40rpx;
  height: 40rpx;
}
.rank-title{
  font-size:32rpx;
  color: #000;
  margin-right: 20rpx;
}
.rank-bottom{
  font-size: 28rpx;
  color: #999;
}
.search-right{
  color: #999;
}
.search-item:nth-child(1) .rank{
  color: #ff3a3a;
}
.search-item:nth-child(2) .rank{
  color: #ff3a3a;
}
.search-item:nth-child(3) .rank{
  color: #ff3a3a;
}
.sear-main{
  margin-top: 30rpx;
}
.sear-item{
  height: 84rpx;
  line-height: 84rpx;
  font-size: 32rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}