/* components/songList/songList.wxss */
@import '/style/iconfont.wxss';
.wrap{
  height:100%;
  padding-top:128rpx;
  position: relative;
  box-sizing: border-box;
  /* background: url('http://gzy.show:60001/img/background.d7b7204f.jpg') no-repeat; */
  background-size: contain;
}
scroll-view {
  background: #fff;
}
.scrollBig{
  position: sticky;
  display: flex;
  flex-direction: column;
  height:100%;
  box-sizing: border-box;
  top:350rpx;
  z-index: 5;
}
.scrollSmall{
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
}
.list{
  background: #fff;
  min-height: 300rpx;
  padding: 0 32rpx;
}
.choose{
  padding-left:0;
}
.list>view{
  height: 100rpx;
  display: flex;
}
.list image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.content{
  flex: 1;
  overflow: hidden;
}
.aritist{
  line-height: 27rpx;
  height: 27rpx;
  font-size: 23rpx;
  color: #808080;
}
.ellip{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.name{
  line-height: 46rpx;
  color: 333334;
  margin-bottom: 7rpx;
  width: 100%; 
}
.icon-gengduoxiao{
  color: #b3b3b3;
  font-size: 40rpx;
}
.lefttopLine,.righttopLine{
  width: 16rpx;
  height: 32rpx;
  position: absolute;
  top:-10rpx;
}
.lefttopLine{
  left:144rpx;
}
.righttopLine{
  right:144rpx;
}